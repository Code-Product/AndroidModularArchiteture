<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/parentTab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        tl:tl_indicator_color="@color/colorPrimary"
        tl:tl_textSelectColor="@color/colorThemeText"
        tl:tl_textUnselectColor="@color/colorTextThird"
        tl:tl_indicator_corner_radius="24dp"
        tl:tl_indicator_style="BLOCK"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/parentPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/parentTab" />

</RelativeLayout>


