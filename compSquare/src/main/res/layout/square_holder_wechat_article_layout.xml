<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingTop="15dp"
    android:paddingEnd="15dp">

    <View
        android:id="@+id/weChat"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="@drawable/square_ic_wechat"/>

    <TextView
        android:layout_alignTop="@+id/weChat"
        android:layout_toEndOf="@+id/weChat"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/createTime"
        tools:text="发布于 2019-12-11 00：00"
        android:textSize="13sp"
        android:textColor="@color/colorTextSecondary"
        android:includeFontPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/weChat"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/title"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/colorTextPrimary"
        android:textStyle="bold"
        tools:text="公众号标题"
        android:includeFontPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.effective.android.base.view.ExpandableTextView
        android:layout_below="@+id/title"
        android:layout_marginTop="10dp"
        app:collapse_line="3"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:collapse_text="@string/square_card_content_expand"
        app:collapse_color="@color/colorPrimary"
        android:id="@+id/content"
        android:textSize="15sp"
        tools:text="公众号内容"
        android:textColor="@color/colorTextSecondary"
        android:includeFontPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<!--    <com.effective.android.component.square.view.ItemTagInfoView-->
<!--        android:layout_marginTop="20dp"-->
<!--        android:id="@+id/tag_info"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"/>-->

</RelativeLayout>

