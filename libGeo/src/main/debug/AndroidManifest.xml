            android:name="com.baidu.lbsapi.API_KEY"
            android:value="AWcrVMycpiVPhs9HPfatSjiNfp6XHRd9" />

        <activity
            android:name=".MainActivity"
            android:label="@string/geo_app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".location.LocationActivity"></activity>
        <activity android:name=".LocationOption"></activity>
        <activity android:name=".LocationFilter"></activity>
        <activity android:name=".NotifyActivity"></activity>
        <activity android:name=".QuestActivity"></activity>
        <activity android:name=".LocationAutoNotify"></activity>
        <activity android:name=".IndoorLocationActivity"></activity>
        <activity android:name=".ForegroundActivity"></activity>
        <activity android:name=".IsHotWifiActivity"></activity>
    </application>

</manifest>


