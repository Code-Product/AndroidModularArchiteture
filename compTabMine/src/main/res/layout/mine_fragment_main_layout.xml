<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <com.effective.android.base.view.StatusBarView
        android:id="@+id/statusView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/infoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statusView"
        android:background="@color/colorPrimary"
        android:paddingStart="20dp"
        android:paddingTop="40dp"
        android:paddingEnd="20dp"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/avatar"
            android:textColor="@color/colorThemeText"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="Yummylau" />

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/avatar"
            android:background="@drawable/mine_se_login"
            android:paddingStart="20dp"
            android:paddingTop="8dp"
            android:paddingEnd="20dp"
            android:paddingBottom="8dp"
            android:text="前往登陆"
            android:textColor="@color/mine_se_color_login"
            android:textSize="15sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/avatar_bg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/mine_se_avatar_bg" />

        <com.effective.android.base.view.roundimage.RoundedImageView
            android:id="@+id/avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            tools:background="@drawable/mine_se_avatar"
            tools:src="@drawable/mine_ic_logout" />

        <View
            android:id="@+id/setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/mine_ic_setting" />

        <LinearLayout
            android:id="@+id/share_and_collect_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avatar_bg"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                android:text="-- 分享"
                android:textColor="@color/colorThemeText"
                android:textSize="18sp">

            </TextView>

            <View
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:background="@color/colorDivider" />

            <TextView
                android:id="@+id/collect_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"
                android:text="-- 收藏"
                android:textColor="@color/colorThemeText"
                android:textSize="18sp">

            </TextView>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rank_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoContainer">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/night_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rank_layout">

    </RelativeLayout>


</RelativeLayout>