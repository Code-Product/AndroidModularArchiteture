<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <com.effective.android.base.view.StatusBarView
        android:id="@+id/status_bar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:status_bar_color="@color/transparent" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@+id/status_bar_view"
        android:layout_alignParentStart="true"
        android:background="@color/transparent"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp"
        app:title="">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ic_search"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15dp"
                android:src="@drawable/blog_ic_search" />

            <com.effective.android.base.view.tab.SuperTabLayout
                android:id="@+id/tab_layout"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="10.5dp"
                app:super_tab_boldSelected="true"
                app:super_tab_selectTextColor="@android:color/white"
                app:super_tab_tabPadding="0dp"
                app:super_tab_tabTextColor="@color/white_alpha_50"
                app:super_tab_tabTextSize="18sp"
                app:super_tab_tabWidth="54dp"
                tools:background="@android:color/black"
                tools:layout_width="100dp" />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_below="@+id/toolbar"
        android:id="@+id/listContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.effective.android.base.view.list.MediaList
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</RelativeLayout>