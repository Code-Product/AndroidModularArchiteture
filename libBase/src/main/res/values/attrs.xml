<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceName">
    <declare-styleable name="SwipeBackLayout">
        <attr name="edge_size" format="dimension"/>
        <attr name="edge_flag">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="bottom" value="2" />
            <enum name="all" value="3" />
        </attr>
        <attr name="shadow_left" format="reference"/>
        <attr name="shadow_right" format="reference"/>
        <attr name="shadow_bottom" format="reference"/>
    </declare-styleable>

    <attr name="SwipeBackLayoutStyle" format="reference"/>

    <declare-styleable name="CornerView">
        <attr name="corner_direction" format="enum">
            <enum name="top_left" value="1" />
            <enum name="top_right" value="2" />
            <enum name="bottom_left" value="3" />
            <enum name="bottom_right" value="4" />
        </attr>
        <attr name="corner_size" format="dimension" />
        <attr name="corner_color" format="reference" />
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">
        <attr name="collapse_line" format="integer" />
        <attr name="expand_line" format="integer" />
        <attr name="collapse_text" format="string" />
        <attr name="expand_text" format="string" />
        <attr name="expand_color" format="reference"/>
        <attr name="collapse_color" format="reference"/>
        <attr name="open_checkout" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RoundedImageView">
        <attr name="corner_radius" format="dimension" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="mutate_background" format="boolean" />
        <attr name="oval" format="boolean" />
        <attr name="android:scaleType" />
    </declare-styleable>

    <declare-styleable name="StatusBarView">
        <attr name="status_bar_color" format="color" />
    </declare-styleable>

    <declare-styleable name="TitleView">
        <attr name="title" format="string" />
        <attr name="titleId" format="reference" />
        <attr name="titleColor" format="color" />
        <attr name="titleSize" format="dimension" />
        <attr name="titleBarBackground" format="color" />
        <attr name="titleLeftEnable" format="boolean" />
        <attr name="titleLeftImage" format="reference" />
    </declare-styleable>


    <declare-styleable name="SuperTabLayout">
        <attr name="super_tab_indicatorColor" format="color" />
        <attr name="super_tab_indicatorWidth" format="dimension" />
        <attr name="super_tab_indicatorStrokeWidth" format="dimension" />
        <attr name="super_tab_indicatorBottomMargin" format="dimension" />
        <attr name="super_tab_indicatorImg" format="reference" />
        <attr name="super_tab_indicatorPadding" format="dimension" />   <!-- tab内指示器的padding，默认tab宽度就是指示器的宽度 -->
        <attr name="super_tab_tabTextColor" format="reference" />
        <attr name="super_tab_tabMod" format="enum">
            <enum name="scrollable" value="0" />
            <enum name="fixed" value="1" />
        </attr>
        <attr name="super_tab_selectTextColor" format="reference" />
        <attr name="super_tab_textSizeTransition" format="boolean" />
        <attr name="super_tab_tabTextSize" format="dimension" />
        <attr name="super_tab_tabTextSizeSelected" format="dimension" />
        <attr name="super_tab_textAlignBottom" format="boolean" />
        <attr name="super_tab_tabPadding" format="dimension" />
        <attr name="super_tab_tabMargin" format="dimension" />
        <attr name="super_tab_tabWidth" format="dimension" />
        <attr name="super_tab_boldSelected" format="boolean" />
        <attr name="super_tab_thinUnselected" format="boolean" />        <!-- 未选中字体是否要变细， 通过设sans-serif-light实现 -->
        <attr name="super_tab_redDotBgResId" format="reference" />
        <attr name="super_tab_smallDotBgResId" format="reference" />
        <attr name="super_tab_redDotGravity" format="integer" />
        <attr name="super_tab_redDotMarginTop" format="dimension" />
        <attr name="super_tab_redDotMarginLeft" format="dimension" />
        <attr name="super_tab_redDotMarginRight" format="dimension" />
        <attr name="super_tab_redDotMarginBottom" format="dimension" />
        <attr name="super_tab_scrollThreshold" format="dimension" />  <!-- 指示器距离tablayout左右边距小于多少时tablayout开始滑动 -->
        <attr name="super_tab_tabBackgroundRes" format="reference" />
        <attr name="super_tab_showIndicator" format="boolean" />
    </declare-styleable>


</resources>